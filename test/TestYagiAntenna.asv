addpath ../include/;

antenna = YagiAntenna;
frequency = 2.4e9;

% Show antenna properties as figures --------------------------------------
figure("Name", "Physical Design")
show(antenna); % Uncomment to see physical design

figure("Nname", "Exciter Design")
show(antenna.exciter); % Uncomment to see exciter design

figure("Name", "Emission Pattern")
pattern(antenna, frequency);

figure("Name", "Azimuth Emission Pattern")
patternAzimuth(antenna, frequency); % Uncomment to see emmision on Azimuth
patternElevation(antenna, frequency); % Uncomment to see emmision on Elevation

% Show power spectrum on map ----------------------------------------------
tx = txsite("Name","Transmitter", ...
    "Antenna", YagiAntenna, ...
    "Latitude", 40.745510, ...
    "Longitude", -74.025395, ...
    "AntennaHeight", 1, ...
    "TransmitterPower", 5, ...
    "TransmitterFrequency", 2.4e9);
show(tx)

coverage(tx, ...
    "SignalStrengths", -120:-5, ...
    "MaxRange", 260, ...
    "Resolution", 3, ...
    "Transparency", 0.6);

rmpath ../include/;